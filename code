  <button class="to-top" id="toTop" aria-label="Back to top">↑</button>

  <script>
    // ---- SETTINGS ----
    const FORMSPREE_ID = ""; // <- put your Formspree ID here to enable sending (e.g. "xyzzabcd")
    const CONTACT_EMAIL = "hello@amac.co"; // mailto fallback

    // Copyright year
    document.getElementById('y').textContent = new Date().getFullYear();

    // Mobile menu toggle
    const btn = document.querySelector('.hamburger');
    const nav = document.querySelector('#primaryNav');
    btn?.addEventListener('click', () => {
      const open = nav.classList.toggle('open');
      btn.setAttribute('aria-expanded', open);
    });

    // Smooth anchor scroll with sticky header offset
    const header = document.querySelector('header.nav');
    function scrollWithOffset(id){
      const el = document.getElementById(id);
      if(!el) return;
      const top = el.getBoundingClientRect().top + window.scrollY - (header?.offsetHeight || 0) - 8;
      window.scrollTo({top, behavior:'smooth'});
    }
    document.querySelectorAll('a[href^="#"]').forEach(a => {
      a.addEventListener('click', e => {
        const id = a.getAttribute('href').slice(1);
        if(id){ e.preventDefault(); scrollWithOffset(id); nav?.classList.remove('open'); btn?.setAttribute('aria-expanded','false'); }
      });
    });

    // Active nav link while scrolling
    const sections = Array.from(document.querySelectorAll('main[id], section[id]'));
    const links = Array.from(document.querySelectorAll('nav.menu a[href^="#"]'));
    const byId = id => links.find(l => l.getAttribute('href') === '#' + id);
    const io = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        const l = byId(entry.target.id);
        if(!l) return;
        if(entry.isIntersecting){ links.forEach(x => x.classList.remove('active')); l.classList.add('active'); }
      });
    }, {rootMargin:'-50% 0px -45% 0px', threshold:0});
    sections.forEach(s => io.observe(s));

    // Back-to-top
    const toTop = document.getElementById('toTop');
    window.addEventListener('scroll', () => { if(window.scrollY > 600) toTop?.classList.add('show'); else toTop?.classList.remove('show'); });
    toTop?.addEventListener('click', () => window.scrollTo({top:0, behavior:'smooth'}));

    // Contact form handling: Formspree if ID set; else mailto fallback
    const form = document.getElementById('contactForm');
    const sendBtn = document.getElementById('sendBtn');
    const setHelp = (id, msg='') => { const el = document.getElementById(id); if(el) el.textContent = msg; };
    const status = document.getElementById('formStatus');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const name = document.getElementById('name');
      const email = document.getElementById('email');
      const msg = document.getElementById('message');
      setHelp('nameHelp'); setHelp('emailHelp'); setHelp('messageHelp'); status.textContent = '';
      let ok = true;
      if(!name.value.trim()){ setHelp('nameHelp','Please enter your name.'); ok = false; }
      if(!email.value.match(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/)){ setHelp('emailHelp','Please enter a valid email.'); ok = false; }
      if(!msg.value.trim()){ setHelp('messageHelp','Please include a message.'); ok = false; }
      if(!ok) return;

      sendBtn.disabled = true; sendBtn.textContent = 'Sending...';
      try{
        if(FORMSPREE_ID){
          const endpoint = `https://formspree.io/f/${FORMSPREE_ID}`;
          const formData = new FormData(form);
          const res = await fetch(endpoint, { method:'POST', body:formData, headers:{'Accept':'application/json'} });
          if(res.ok){ status.textContent = 'Thanks! We received your message.'; form.reset(); }
          else throw new Error('Formspree error');
        } else {
          const to = CONTACT_EMAIL || 'info@example.com';
          const subject = encodeURIComponent(`Website inquiry from ${name.value}`);
          const body = encodeURIComponent(`Name: ${name.value}\\nEmail: ${email.value}\\n\\n${msg.value}`);
          window.location.href = `mailto:${to}?subject=${subject}&body=${body}`;
          status.textContent = 'Opening your email app... If nothing happens, email us directly.';
        }
      }catch(err){ console.error(err); status.textContent = 'Sorry—there was a problem. Please email us directly.'; }
      finally{ sendBtn.disabled = false; sendBtn.textContent = 'Send message'; }
    });
  </script>
</body>
